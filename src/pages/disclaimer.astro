<BaseLayout title="Disclaimer" description="Legal disclaimer for Forensic Darkness website content.">
  <section class="py-12">
    <div class="container max-w-4xl">
      <h1 class="text-4xl font-display font-bold mb-6">Disclaimer</h1>

