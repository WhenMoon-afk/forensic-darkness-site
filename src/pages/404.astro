---
import BaseLayout from '../layouts/BaseLayout.astro';

const baseUrl = import.meta.env.BASE_URL;
const internalUrl = (path: string) => `${baseUrl}${path.startsWith('/') ? path.slice(1) : path}`;
---

<BaseLayout title="Page Not Found">
  <section class="py-20">
    <div class="container text-center">
      <div class="max-w-2xl mx-auto">
        <h1 class="text-8xl font-display font-bold text-fd-primary mb-4">404</h1>
        <h2 class="text-3xl font-display font-bold mb-6">Page Not Found</h2>
        <p class="text-fd-muted text-lg mb-8">
          The page you're looking for seems to have vanished into the darkness.
          It may have been moved, deleted, or never existed.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a href={internalUrl('/')} class="btn btn-primary">
            Return Home
          </a>
          <a href={internalUrl('/search')} class="btn btn-secondary">
            Search Site
          </a>
          <a href={internalUrl('/blog')} class="btn btn-secondary">
            Browse Articles
          </a>
        </div>
      </div>

      <div class="mt-16 text-fd-muted">
        <p class="text-sm">Looking for something specific?</p>
        <div class="flex justify-center gap-6 mt-4">
          <a href={internalUrl('/resources')} class="hover:text-fd-primary">Resources</a>
          <a href={internalUrl('/about')} class="hover:text-fd-primary">About</a>
          <a href={internalUrl('/spirituality')} class="hover:text-fd-primary">Spirituality</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
