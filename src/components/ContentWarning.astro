---
interface Props {
  type?: 'violence' | 'disturbing' | 'sensitive';
}

const { type = 'sensitive' } = Astro.props;

const messages = {
  violence: 'This article contains descriptions of violence and may be disturbing to some readers.',
  disturbing: 'This content discusses disturbing subject matter including serial killers and violent crimes.',
  sensitive: 'This article contains sensitive content related to crime and violence.',
};
---

<div class="content-warning" role="alert">
  <div class="flex items-start gap-3">
    <svg class="w-5 h-5 text-fd-warning flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
      <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
    </svg>
    <div>
      <h4 class="font-semibold text-fd-warning">Content Warning</h4>
      <p class="text-sm text-fd-text/80 mt-1">{messages[type]}</p>
    </div>
  </div>
</div>
