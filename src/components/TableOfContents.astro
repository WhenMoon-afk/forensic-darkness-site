---
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;

// Filter to only h2 and h3 headings
const toc = headings.filter(h => h.depth >= 2 && h.depth <= 3);
---

{toc.length > 2 && (
  <nav class="toc mb-8 p-4 bg-fd-card rounded-lg" aria-label="Table of Contents">
    <h2 class="text-sm font-bold uppercase tracking-wide text-fd-muted mb-3">Contents</h2>
    <ul class="space-y-2 text-sm">
      {toc.map(heading => (
        <li class={heading.depth === 3 ? 'ml-4' : ''}>
          <a
            href={`#${heading.slug}`}
            class="text-fd-muted hover:text-fd-primary transition-colors block py-0.5"
          >
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}
