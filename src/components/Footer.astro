---
import NewsletterSignup from './NewsletterSignup.astro';

const currentYear = new Date().getFullYear();
const baseUrl = import.meta.env.BASE_URL;
const internalUrl = (path: string) => `${baseUrl}${path.startsWith('/') ? path.slice(1) : path}`;

const resourceLinks = [
  { label: 'Office for Victims of Crime', href: 'https://ovc.ojp.gov/' },
  { label: 'National DV Hotline', href: 'https://www.thehotline.org/' },
  { label: 'Suicide Prevention Lifeline', href: 'https://988lifeline.org/' },
  { label: 'Doe Network', href: 'https://www.doenetwork.org/' },
];

const socialLinks = [
  { label: 'Facebook', href: 'https://www.facebook.com/forensicdarknessserialkillings', icon: 'facebook' },
];
---

<footer class="bg-fd-card/50 border-t border-noir-border mt-auto">
  <div class="container py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- About -->
      <div>
        <h3 class="font-display text-lg font-bold mb-4">Forensic Darkness</h3>
        <p class="text-fd-muted text-sm leading-relaxed">
          Dedicated to informing victims with help and resources. We explore serial killer psychology, forensic science, and provide support for crime victims and their families.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-display text-lg font-bold mb-4">Resources</h3>
        <ul class="space-y-2">
          {resourceLinks.map(link => (
            <li>
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-fd-muted hover:text-fd-primary text-sm flex items-center gap-1"
              >
                {link.label}
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Newsletter -->
      <div>
        <NewsletterSignup variant="footer" />
        <div class="mt-4 flex gap-4">
          {socialLinks.map(social => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-fd-muted hover:text-fd-primary transition-colors"
              aria-label={social.label}
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-noir-border mt-8 pt-8 text-center">
      <p class="text-fd-muted text-sm">
        &copy; {currentYear} Forensic Darkness. All rights reserved.
      </p>
      <p class="text-fd-muted text-xs mt-2">
        <a href={internalUrl('/contact')} class="hover:text-fd-primary">Contact</a>
        {' · '}
        <a href={internalUrl('/rss.xml')} class="hover:text-fd-primary">RSS Feed</a>
        {' · '}
        <a href={internalUrl('/privacy')} class="hover:text-fd-primary">Privacy Policy</a>
        {' · '}
        <a href={internalUrl('/disclaimer')} class="hover:text-fd-primary">Disclaimer</a>
        {' · '}
        <a href={internalUrl('/corrections')} class="hover:text-fd-primary">Corrections</a>
        {' · '}
        <a href={internalUrl('/advisory-board')} class="hover:text-fd-primary">Advisory Board</a>
      </p>
    </div>
  </div>
</footer>
